<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The profile picture -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="55dp"
        android:layout_height="55sp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bubblegum" />

    <!-- The post that the character makes -->
    <TextView
        android:id="@+id/Txt_Small_Words"
        android:layout_width="223dp"
        android:layout_height="58dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="8dp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <!-- The name of the character posting -->
    <TextView
        android:id="@+id/Lbl_NameBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/Txt_Small_Words"
        app:layout_constraintStart_toEndOf="@+id/imageView2" />

    <!-- Random number, that will be changed to date when post was made. -->
    <TextView
        android:id="@+id/txtNumber"
        android:layout_width="41dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:text="3"
        app:layout_constraintStart_toEndOf="@+id/Txt_Small_Words"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>